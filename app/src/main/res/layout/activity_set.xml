<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <com.iwangcn.qingkong.ui.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/background_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/set_information"
                    android:textColor="@color/font_gray"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/mine_item_margin_left">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_item_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextView.fragmentMineBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_notify" />

                    <Switch
                        android:id="@+id/mine_switch_notify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/mine_item_margin_left"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />
                </RelativeLayout>

            </LinearLayout>
            <!--应用相关-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/set_notify_way"
                    android:textColor="@color/font_gray"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/mine_item_margin_left">

                <RelativeLayout
                    android:id="@+id/mine_rel_set"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_item_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextView.fragmentMineBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_sound" />

                    <Switch
                        android:id="@+id/mine_switch_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/mine_item_margin_left"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"></View>

                <RelativeLayout
                    android:id="@+id/mine_rel_information"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_item_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextView.fragmentMineBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_vibrator" />

                    <Switch
                        android:id="@+id/mine_switch_vibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/mine_item_margin_left"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"></View> <!--修改密码-->
            <!--修改密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/set_modify_pw"
                    android:textColor="@color/font_gray"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/mine_item_margin_left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_item_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextView.fragmentMineBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_pw_original" />

                    <EditText
                        style="@style/TextView.fragmentMineBlack"
                        android:id="@+id/set_ed_pw_original"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="@dimen/mine_item_margin_left"
                        android:background="@android:color/transparent"
                        android:digits="@string/rule_password"
                        android:inputType="numberPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColorHint="@color/font_gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_item_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextView.fragmentMineBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_pw_new" />

                    <EditText
                        style="@style/TextView.fragmentMineBlack"
                        android:id="@+id/set_ed_pw_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="@dimen/mine_item_margin_left"
                        android:background="@android:color/transparent"
                        android:digits="@string/rule_password"
                        android:inputType="numberPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColorHint="@color/font_gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_item_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextView.fragmentMineBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_pw_new_again" />

                    <EditText
                        style="@style/TextView.fragmentMineBlack"
                        android:id="@+id/set_ed_pw_new_again"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="@dimen/mine_item_margin_left"
                        android:background="@android:color/transparent"
                        android:digits="@string/rule_password"
                        android:inputType="numberPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColorHint="@color/font_gray" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"></View>

            <Button
                android:id="@+id/set_btn_changePw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/set_button_save_select"
                android:enabled="false"
                android:gravity="center"
                android:text="确认修改密码"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </com.iwangcn.qingkong.ui.view.BounceScrollView>
</LinearLayout>