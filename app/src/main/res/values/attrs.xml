<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--刷新布局,直接包裹ListView,RecyclerView,ScrollView等．-->
    <item name="ex_header" type="id" />
    <declare-styleable name="ReloadRefreshLayout">
        <attr name="reloadwave_height" format="dimension" />
        <attr name="reloadhead_height" format="dimension" />
        <attr name="reloadbottom_height" format="dimension" />
        <attr name="reloadoverscroll_height" format="dimension" />
        <attr name="reloadenable_loadmore" format="boolean" /><!--开关加载更多-->
        <attr name="reloadenable_fresh" format="boolean" /><!--开关下拉刷新-->
        <attr name="reloadpureScrollMode_on" format="boolean" />
        <attr name="reloadoverscroll_top_show" format="boolean" />
        <attr name="reloadoverscroll_bottom_show" format="boolean" />
        <attr name="reloadenable_overscroll" format="boolean" />
        <attr name="reloadheaderView" format="dimension" />
        <attr name="reloadbottomView" format="dimension" />
        <!--刷新函数执行完毕,自动关闭.databinding属性-->
        <attr name="toggleFresh" format="boolean" />
        <attr name="switchFresh" format="boolean" />
        <attr name="onDownFresh" format="reference" />
        <attr name="onUpFresh" format="reference" />
    </declare-styleable>
    <!--刷新尾部的视图样式-->
    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="indicator">
            <flag name="BallPulse" value="0" />
            <flag name="BallGridPulse" value="1" />
            <flag name="BallClipRotate" value="2" />
            <flag name="BallClipRotatePulse" value="3" />
            <flag name="SquareSpin" value="4" />
            <flag name="BallClipRotateMultiple" value="5" />
            <flag name="BallPulseRise" value="6" />
            <flag name="BallRotate" value="7" />
            <flag name="CubeTransition" value="8" />
            <flag name="BallZigZag" value="9" />
            <flag name="BallZigZagDeflect" value="10" />
            <flag name="BallTrianglePath" value="11" />
            <flag name="BallScale" value="12" />
            <flag name="LineScale" value="13" />
            <flag name="LineScaleParty" value="14" />
            <flag name="BallScaleMultiple" value="15" />
            <flag name="BallPulseSync" value="16" />
            <flag name="BallBeat" value="17" />
            <flag name="LineScalePulseOut" value="18" />
            <flag name="LineScalePulseOutRapid" value="19" />
            <flag name="BallScaleRipple" value="20" />
            <flag name="BallScaleRippleMultiple" value="21" />
            <flag name="BallSpinFadeLoader" value="22" />
            <flag name="LineSpinFadeLoader" value="23" />
            <flag name="TriangleSkewSpin" value="24" />
            <flag name="Pacman" value="25" />
            <flag name="BallGridBeat" value="26" />
            <flag name="SemiCircleSpin" value="27" />
        </attr>
        <attr name="indicator_color" format="color" />
    </declare-styleable>


    <!--条目滑动删除-->
    <declare-styleable name="SwipeItemLayout">
        <attr name="bga_sil_swipeDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="bga_sil_bottomMode" format="enum">
            <enum name="pullOut" value="0" />
            <enum name="layDown" value="1" />
        </attr>
        <attr name="bga_sil_springDistance" format="dimension" />
        <attr name="bga_sil_swipeAble" format="boolean" />
    </declare-styleable>

    <!--自定义广告条-->
    <declare-styleable name="AdScrollViewPager">
        <attr name="defaultsrc" format="reference" />
        <attr name="autoscroll" format="boolean" />
        <attr name="scrollduration" format="integer" />
        <attr name="dotmargins" format="dimension" />
        <attr name="dotsize" format="dimension" />
        <attr name="dotbottommargin" format="dimension" />
    </declare-styleable>

    <!--自定义vp的tab,颜色可以使用selector-->
    <declare-styleable name="PagerTab">
        <attr name="tabBackGroundColor" format="reference" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabIndicatorLineColor" format="color" />
    </declare-styleable>

</resources>
